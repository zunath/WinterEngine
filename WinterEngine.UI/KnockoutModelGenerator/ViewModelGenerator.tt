<#
	var list = new List<Type>();
	
	foreach (Type type in System.Reflection.Assembly.GetAssembly(typeof(WinterEngine.DataTransferObjects.IEntity)).GetTypes())
    {
	    if (type.IsAbstract) continue;	// only generate JS viewmodels for non-abstract classes

		list.Add(type);
    }

	foreach (var type in list)
    {
		var vmtemplate = new ViewModelTemplate(type, list);
		vmtemplate.Output.Project = @"..\..\WinterEngine.UI\WinterEngine.UI.csproj";
		vmtemplate.Output.File = @"Scripts\ViewModels\" + type.Name + ".js";
		vmtemplate.Render();
    }
#>
